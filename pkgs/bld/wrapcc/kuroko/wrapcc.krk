#!/usr/bin/env kuroko

import os
import fileio
import kuroko as sys

def it_args():
    for x in sys.argv[1:]:
        if x:
            if x[0] == '@':
                yield from fileio.open(x[1:], 'r').read().split()
            elif x.startswith('-o/'):
                yield '-o'
                yield x[2:]
            else:
                yield x

def flt_args():
    for x in it_args():
        if x == '-MMD':
            continue

        if '-D-pthread' in x:
            continue

        if x.startswith('/usr/lib') and '.so' in x:
            continue

        if x.startswith('/lib') and '.so' in x:
            continue

        yield x

def replace(lst, x, y):
    for el in lst:
        if el == x:
            yield y
        else:
            yield el

let args = list(replace(flt_args(), '-Ur', '-r'))

if '-r' in args:
    args = ['ld.lld'] + args[1:]

def flt_objs():
    for x in args:
        if x.endswith('.o'):
            yield x
        elif '/store/' in x:
            pass
        elif x.endswith('.a'):
            yield x

def have_objs():
    for x in args:
        if x.endswith('.o'):
            return True

def iter_dirs(path):
    let cur = ''

    for ch in path:
        if ch == '/':
            if cur:
                yield cur
                cur = ''
            else:
                cur += ch

def make_dirs_for(path):
    for d in iter_dirs(path):
        try:
            os.mkdir(d)
        except OSError as e:
            if 'File exists' not in str(e):
                raise e

def link1(x, objs):
    if '/' in x:
        make_dirs_for(x)

    if objs:
        retry(['llvm-ar', 'qL', x] + objs)
    else:
        with fileio.open(x, 'w') as f:
            pass

def link(objs):
    for x in args:
        if '-Wl' in x:
            continue

        if '.so' in x:
            return link1(x, objs)

def retry(args):
    os.execvp(args[0], args)

def calc_program(args):
    if '-P' in args or '-E' in args:
        return 'clang-cpp'

    return args[0]

def main():
    let sa = str(args)

    if '-M' in args:
        return

    if '-MM' in args:
        return

    if '-c' in args:
        pass
    elif '-shared' in sa or '--soname' in sa:
        return link(list(flt_objs()))
    elif have_objs():
        if '-rdynamic' in sa or '-export-dynamic' in sa:
            return retry(['dynlink'] + args)

    retry([calc_program(args)] + args[1:])

main()
